<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE suite SYSTEM "https://testng.org/testng-1.0.dtd">
<suite name="Selenium Level 2 Test Suite" parallel="tests" thread-count="3">
    <listeners>
        <listener class-name="org.example.report.strategy.DelegatingReportListener"/>
    </listeners>
    
    <!-- Chrome Test-->
    <test name="Chrome">
        <parameter name="browser" value="chrome"/>
        <classes>
            <class name="testCase.TC01_AgodaHotelSearchTest"/>
         
        </classes>
    </test>

    <!-- Firefox Test - sẽ được skip nếu user không chọn firefox -->
     <test name="Firefox">
        <parameter name="browser" value="firefox"/>
        <classes>
            <class name="testCase.TC01_AgodaHotelSearchTest"/>

        </classes>
    </test>

    <!-- Edge Test - sẽ được skip nếu user không chọn edge -->
     <test name="Edge">
        <parameter name="browser" value="edge"/>
        <classes>
            <class name="testCase.TC01_AgodaHotelSearchTest"/>
         
        </classes>
    </test>
</suite>
