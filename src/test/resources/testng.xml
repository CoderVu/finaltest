<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE suite SYSTEM "https://testng.org/testng-1.0.dtd">
<suite name="Selenium Level 2 Test Suite" parallel="tests" thread-count="3">
    <listeners>
        <listener class-name="org.example.report.AllureConfig"/>
        <listener class-name="org.example.report.LogConfig"/>
    </listeners>

    <test name="Chrome">
        <parameter name="browser" value="chrome"/>
        <classes>
            <!-- <class name="testCase.TC001_VerifyUserCanFilterSearchConditionForProduct"/> -->
            <class name="testCase.TC002_VerifyUserCanSeeMoreItems"/>
        </classes>
    </test>

    <test name="Firefox">
        <parameter name="browser" value="firefox"/>
        <classes>
            <!-- <class name="testCase.TC001_VerifyUserCanFilterSearchConditionForProduct"/> -->
            <class name="testCase.TC002_VerifyUserCanSeeMoreItems"/>
        </classes>
    </test>

    <test name="Edge">
        <parameter name="browser" value="edge"/>
        <classes>
            <!-- <class name="testCase.TC001_VerifyUserCanFilterSearchConditionForProduct"/> -->
            <class name="testCase.TC002_VerifyUserCanSeeMoreItems"/>
        </classes>
    </test>
</suite>
