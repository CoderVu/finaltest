<!DOCTYPE aspectj PUBLIC
        "-//AspectJ//DTD//EN"
        "http://www.eclipse.org/aspectj/dtd/aspectj.dtd">
<aspectj>
    <weaver>
        <!-- Include all packages that contain @Aspect classes -->
        <include within="org.example.core.report.aop.*"/>
        <!-- Also include packages that contain classes with @Step annotations -->
        <include within="org.example.pages.*"/>
        <include within="org.example.core.*"/>
    </weaver>
    <aspects>
        <!-- Explicitly register the StepAspect -->
        <aspect name="org.example.core.aop.StepAspect"/>
    </aspects>
</aspectj>

